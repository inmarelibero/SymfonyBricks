{% extends "BricksUserBundle::layout.html.twig" %}

{% block main %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <h1>{{ 'change_password.title'|trans({}, 'FOSUserBundle') }}</h1>
        
            <br><br>
        
            <form  class="fos_user_change_password security-form form-horizontal" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" novalidate>

                <div class="form-group {{ (form_errors(form.current_password))?'has-error':'' }}">
                    <label class="col-lg-3 control-label">
                        {{ 'form.current_password'|trans({}, 'FOSUserBundle') }}
                    </label>
                    <div class="col-lg-9">
                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}

                        {% if form_errors(form.current_password) %}
                            <div class="help-block errors">
                                {{ form_errors(form.current_password) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group {{ (form_errors(form.plainPassword.first))?'has-error':'' }}">
                    <label class="col-lg-3 control-label">
                        {{ 'form.password'|trans({}, 'FOSUserBundle') }}
                    </label>
                    <div class="col-lg-9">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

                        {% if form_errors(form.plainPassword.first) %}
                            <div class="help-block errors">
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group {{ (form_errors(form.plainPassword.first))?'has-error':'' }}">
                    <label class="col-lg-3 control-label">
                        {{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}
                    </label>
                    <div class="col-lg-9">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-9">
                        <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
                    </div>
                </div>

                {{ form_rest(form) }}
            </form>
            
        </div>
    </div>
    
{% endblock %}